<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration: HTTPS only, no cleartext -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs for HTTPS -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Development/Debug exception for localhost testing -->
    <!-- Remove this domain-config in production builds -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Production API domain with certificate pinning -->
    <!-- 
    Uncomment and configure when production domain is ready:
    
