<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude all sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="secure_storage.xml"/>
        <exclude domain="database" path="."/>
        <exclude domain="file" path="audit_logs/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Exclude sensitive data from device-to-device transfer -->
        <exclude domain="sharedpref" path="secure_storage.xml"/>
    </device-transfer>
</data-extraction-rules>
